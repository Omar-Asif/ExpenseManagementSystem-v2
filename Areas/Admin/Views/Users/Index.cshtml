@model ExpenseManagementSystem.ViewModels.Admin.UserIndexViewModel
@{
    ViewData["Title"] = "User Management";
    var statusText = Model.StatusFilter == "active" ? "Active" : 
                     Model.StatusFilter == "inactive" ? "Inactive" : "All";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">User Management</h4>
        <p class="text-secondary mb-0">Manage system users and their access</p>
    </div>
    <div>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Summary -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <a asp-action="Index" class="card text-decoration-none @(string.IsNullOrEmpty(Model.StatusFilter) ? "border-primary" : "")">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-primary">@Model.TotalCount</div>
                <div class="text-secondary">Total Users</div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="Active" class="card text-decoration-none @(Model.StatusFilter == "active" ? "border-success" : "")">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-success">@Model.ActiveCount</div>
                <div class="text-secondary">Active Users</div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="Inactive" class="card text-decoration-none @(Model.StatusFilter == "inactive" ? "border-danger" : "")">
            <div class="card-body text-center">
                <div class="fs-2 fw-bold text-danger">@Model.InactiveCount</div>
                <div class="text-secondary">Inactive Users</div>
            </div>
        </a>
    </div>
</div>

<!-- Search & Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <input type="hidden" name="status" value="@Model.StatusFilter" />
            <div class="col-md-8">
                <label class="form-label">Search Users</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" value="@Model.SearchTerm" class="form-control" 
                           placeholder="Search by name or email..." />
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i> Search
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i> Clear
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">@statusText Users (@Model.Users.Count)</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Joined</th>
                            <th>Transactions</th>
                            <th>Income</th>
                            <th>Expenses</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3" style="width: 40px; height: 40px; background: var(--primary-light); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            <span class="text-primary fw-semibold">@user.FullName[0]</span>
                                        </div>
                                        <div>
                                            <div class="fw-medium">@user.FullName</div>
                                            <small class="text-muted">@user.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td><span class="badge badge-info">@user.TransactionCount</span></td>
                                <td class="text-success">$@user.TotalIncome.ToString("N2")</td>
                                <td class="text-danger">$@user.TotalExpense.ToString("N2")</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="bi bi-check-circle me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">
                                            <i class="bi bi-x-circle me-1"></i>Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-secondary me-1" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="ToggleStatus" asp-route-id="@user.Id" 
                                       class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")" 
                                       title="@(user.IsActive ? "Deactivate" : "Activate")">
                                        <i class="bi bi-@(user.IsActive ? "person-dash" : "person-check")"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3 mb-0">No users found</p>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <p class="text-secondary small">Try a different search term</p>
                }
            </div>
        }
    </div>
</div>
