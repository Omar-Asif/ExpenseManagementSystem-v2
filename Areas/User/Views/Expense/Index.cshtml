@model ExpenseManagementSystem.ViewModels.Expense.ExpenseIndexViewModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Expenses</h4>
        <p class="text-secondary mb-0">Track and manage your expenses</p>
    </div>
    <a asp-action="Create" class="btn btn-danger">
        <i class="bi bi-plus-lg me-1"></i> Add Expense
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">Month</label>
                <select name="month" class="form-select">
                    <option value="">All Months</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        var monthName = new DateTime(2000, i, 1).ToString("MMMM");
                        <option value="@i" selected="@(Model.FilterMonth == i)">@monthName</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Year</label>
                <select name="year" class="form-select">
                    <option value="">All Years</option>
                    @for (int i = DateTime.Today.Year; i >= DateTime.Today.Year - 5; i--)
                    {
                        <option value="@i" selected="@(Model.FilterYear == i)">@i</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Category</label>
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat" selected="@(Model.FilterCategory == cat)">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel me-1"></i> Filter
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
            <div class="col-md-3 text-end">
                <div class="stats-card p-3" style="background: var(--danger-light); border-radius: 0.5rem;">
                    <div class="text-danger small">Total Expenses</div>
                    <div class="fs-4 fw-bold text-danger">$@Model.TotalExpense.ToString("N2")</div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Expense List -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Expense Records</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Expenses.Any())
        {
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in Model.Expenses)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3" style="width: 40px; height: 40px; background: var(--danger-light); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-arrow-down-circle text-danger"></i>
                                        </div>
                                        <div>
                                            <span class="fw-medium">@expense.Title</span>
                                            @if (!string.IsNullOrEmpty(expense.Description))
                                            {
                                                <br /><small class="text-secondary">@expense.Description</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-primary">@expense.Category</span>
                                </td>
                                <td>
                                    <span class="text-danger fw-semibold">-$@expense.Amount.ToString("N2")</span>
                                </td>
                                <td>@expense.Date.ToString("MMM dd, yyyy")</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-secondary me-1" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3 mb-0">No expense records found</p>
                <p class="text-secondary small">Add your first expense to start tracking</p>
                <a asp-action="Create" class="btn btn-danger mt-2">
                    <i class="bi bi-plus-lg me-1"></i> Add Expense
                </a>
            </div>
        }
    </div>
</div>
