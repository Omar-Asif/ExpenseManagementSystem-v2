@model ExpenseManagementSystem.ViewModels.Income.IncomeIndexViewModel
@{
    ViewData["Title"] = "Income";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Income</h4>
        <p class="text-secondary mb-0">Track and manage your income sources</p>
    </div>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-lg me-1"></i> Add Income
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Month</label>
                <select name="month" class="form-select">
                    <option value="">All Months</option>
                    @for (int i = 1; i <= 12; i++)
                    {
                        var monthName = new DateTime(2000, i, 1).ToString("MMMM");
                        <option value="@i" selected="@(Model.FilterMonth == i)">@monthName</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Year</label>
                <select name="year" class="form-select">
                    <option value="">All Years</option>
                    @for (int i = DateTime.Today.Year; i >= DateTime.Today.Year - 5; i--)
                    {
                        <option value="@i" selected="@(Model.FilterYear == i)">@i</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-funnel me-1"></i> Filter
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i> Clear
                </a>
            </div>
            <div class="col-md-3 text-end">
                <div class="stats-card p-3" style="background: var(--success-light); border-radius: 0.5rem;">
                    <div class="text-success small">Total Income</div>
                    <div class="fs-4 fw-bold text-success">$@Model.TotalIncome.ToString("N2")</div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Income List -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Income Records</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Incomes.Any())
        {
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var income in Model.Incomes)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-3" style="width: 40px; height: 40px; background: var(--success-light); border-radius: 0.5rem; display: flex; align-items: center; justify-content: center;">
                                            <i class="bi bi-arrow-up-circle text-success"></i>
                                        </div>
                                        <span class="fw-medium">@income.Title</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-success fw-semibold">+$@income.Amount.ToString("N2")</span>
                                </td>
                                <td>@income.Date.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="text-secondary">@(income.Description ?? "-")</span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@income.Id" class="btn btn-sm btn-secondary me-1" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@income.Id" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-3 mb-0">No income records found</p>
                <p class="text-secondary small">Add your first income to get started</p>
                <a asp-action="Create" class="btn btn-success mt-2">
                    <i class="bi bi-plus-lg me-1"></i> Add Income
                </a>
            </div>
        }
    </div>
</div>
