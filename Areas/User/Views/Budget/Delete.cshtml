@model ExpenseManagementSystem.ViewModels.Budget.BudgetListViewModel
@{
    ViewData["Title"] = "Delete Budget";
    var monthName = new DateTime(Model.Year, Model.Month, 1).ToString("MMMM yyyy");
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-action="Index">Budget Planner</a></li>
            <li class="breadcrumb-item active">Delete Budget</li>
        </ol>
    </nav>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-info-circle me-2"></i>
                    Are you sure you want to delete this budget? This action cannot be undone.
                </div>

                <div class="bg-dark rounded p-3 mb-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Category</dt>
                        <dd class="col-sm-8 fw-medium">@Model.Category</dd>

                        <dt class="col-sm-4 text-secondary">Period</dt>
                        <dd class="col-sm-8">@monthName</dd>

                        <dt class="col-sm-4 text-secondary">Planned</dt>
                        <dd class="col-sm-8 text-primary fw-semibold">$@Model.PlannedAmount.ToString("N2")</dd>

                        <dt class="col-sm-4 text-secondary">Spent</dt>
                        <dd class="col-sm-8 text-danger">$@Model.SpentAmount.ToString("N2")</dd>

                        <dt class="col-sm-4 text-secondary">Remaining</dt>
                        <dd class="col-sm-8 @(Model.RemainingAmount >= 0 ? "text-success" : "text-danger") fw-semibold">
                            $@Model.RemainingAmount.ToString("N2")
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Delete Budget
                        </button>
                        <a asp-action="Index" asp-route-month="@Model.Month" asp-route-year="@Model.Year" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
