@model ExpenseManagementSystem.ViewModels.Budget.BudgetEditViewModel
@{
    ViewData["Title"] = "Edit Budget";
    var categories = ViewBag.Categories as List<string> ?? new List<string>();
    var months = ViewBag.Months as List<(int Value, string Name)> ?? new List<(int, string)>();
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-action="Index">Budget Planner</a></li>
            <li class="breadcrumb-item active">Edit Budget</li>
        </ol>
    </nav>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil text-primary me-2"></i>Edit Budget
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="">Select a category</option>
                            @foreach (var cat in categories)
                            {
                                <option value="@cat">@cat</option>
                            }
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PlannedAmount" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="PlannedAmount" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                        </div>
                        <span asp-validation-for="PlannedAmount" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Month" class="form-label"></label>
                            <select asp-for="Month" class="form-select">
                                @foreach (var m in months)
                                {
                                    <option value="@m.Value">@m.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Month" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Year" class="form-label"></label>
                            <select asp-for="Year" class="form-select">
                                @for (int i = DateTime.Today.Year; i >= DateTime.Today.Year - 5; i--)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                            <span asp-validation-for="Year" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i> Update Budget
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
